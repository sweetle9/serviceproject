<% if user_signed_in? && current_user.isadmin == true%>

<h1>Панель администрирования</h1>

<div class="">
  <%= link_to "Публикации", admin_path %>
  <%= link_to "Комментарии", comments_path %>
  <%= link_to "Пользователи", users_path %>
  <%= link_to "Жанры", categories_path %>
</div>

<%= link_to 'New Post', new_post_path %>

<table style='margin-bottom: 100px'>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Title</th>
      <!-- <th>Content</th> -->
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%#= link_to(image_tag(@post.image.thumb.url, alt: 'Image'), @post.image.url, target: '_blank') if @post.image? %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <%#= link_to(image_tag(@post.image.thumb.url, alt: 'Image'), @post.image.url, target: '_blank') if @post.image? %>
        <td><%# post.image %></td>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.category.name %></td>
        <td><%#= post.content.html_safe %></td>
        <td><%= post.comments.count %> <%= (post.comments.count) == 1 ? 'Comment' : 'Commentes'%></td>
        <td><%= link_to 'show', post %></td>
        <td><%= link_to 'edit', edit_post_path(post) %></td>
        <td><%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
