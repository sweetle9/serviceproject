<%= stylesheet_link_tag 'postindex', media: 'all', 'data-turbolinks-track': 'reload'%>

<p id="notice"><%= notice %></p>

<!-- <h1>Posts</h1> -->


<div class="cats">
	<p><%= link_to "Все", "../posts" %></p>
	<% Category.all.each do |cat| %>
		<%= link_to cat.name, posts_path(category: cat.name) %>
	<% end %>
</div>


<div class="all_container">

	<div class="left_menu">
			<p class="second"><%= link_to "Посты", "../posts" %></p>
			<p><%= link_to "Пользователи", users_path %></p>
			<p><%#= link_to "Категории", categories_path %></p>
			<p><%= link_to 'Новый пост', new_post_path %></p>
	</div>

	<div class="all_post">
		<% @posts.each do |post| %>
			<%= link_to post do %>
			<div class="post_container">
				<div class="hov">

				</div>
				<div class="pic">
					<%= image_tag(post.image.url, class: 'fit-image', alt: 'Image') if post.image? %>
				</div>
				<div class="info">
					<p class="postname"><%= post.author %></p>
					<p class="postname"><%= post.name %></p>
					<p class="postname"><%= post.title %></p>
					<div class="downinfo">
						<p>@<%= User.find(post.user_id).username %></p>
					</div>
				</div>
			</div>
			<% end %>
		<% end %>
	</div>
</div>
