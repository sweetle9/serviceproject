<p id="notice"><%= notice %></p>
<%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>

<div class="content">
	<strong>Автор: <%= @post.author %></strong>
</div>
<div class="content">
  <strong>Название картины: <%= @post.name %></strong>
</div>
<div class="content">
  <strong>Год создания: <%= @post.title %></strong>
</div>
</div>

<p>
  <strong>Content:</strong>
  <%= @post.content.html_safe %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<% if user_signed_in? %>
<%= render "comments/form" %>
<% else %>
<p>Please <%= link_to 'login', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> to comment.</p>
<% end %>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
</div>
