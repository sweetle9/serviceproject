<p id="notice"><%= notice %></p>
<%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>
<p>
	<strong>Автор:</strong>
	<%= @post.author %>
</p>
<p>
  <strong>Название картины:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Год создания:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Период/Стиль:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<h2>Comments</h2>
<%= render @post.comments %>
<h2>Add a comment:</h2>
<%= render "comments/form" %>
