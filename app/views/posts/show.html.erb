<p id="notice"><%= notice %></p>
<%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>
<div class="wrapper_content">
<div class="content">
	<strong>Автор:</strong>
	<%= @post.author %>
</div>
<div class="content">
  <strong>Название картины:</strong>
  <%= @post.name %>
</div>
<div class="content year">
  <strong>Год создания:</strong>
  <%= @post.title %>
</div>
<div class="content">
  <strong>Период/Стиль:</strong>
  <%= @post.content %>
</div>
</div>
<div class="editback">
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
<h2>Comments</h2>
<%= render @post.comments %>
<h2>Add a comment:</h2>
<%= render "comments/form" %>
