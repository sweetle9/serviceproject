<table>
  <h1>Панель администрирования</h1>

  <div class="">
    <%= link_to "Публикации", admin_path %>
    <strong><%= link_to "Комментарии", comments_path %></strong>
    <%= link_to "Пользователи", users_path %>
    <%= link_to "Стили", categories_path %>
  </div>
  <thead>
    <tr>
      <th>ID</th>
      <th>Почта</th>
      <th>Ник</th>
      <th>Роль</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.email, user %></td>
        <td><%= user.username %></td>
        <td><%= (user.isadmin) == true ? "админ" : "юзер" %></td>
      </tr>
    <% end %>

  </tbody>
</table>
